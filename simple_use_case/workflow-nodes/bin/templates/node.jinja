import subprocess
import sys

import click
from xmlhelpy import argument
from xmlhelpy import option

from .main import {{ group }}


@{{ group }}.command()
{% for arg in args_dict[0:-2] -%}
  @option({% if arg["keyword"] %}"{{ arg["keyword"] }}", {% endif %}{% if arg["char"] %}char="{{ arg["char"] }}", {% endif %}description="{{ arg["description"] }}")
{% endfor -%}
def {{ command }}({{ args }}):
    """{{ description }}"""
    cmd = ["{{ command }}"]

    {% for arg in args_dict %}
      {%- if arg["char"] and arg["keyword"] -%}
        if {{ arg["keyword"][2:].replace("-", "_") }}:
        cmd += ["{{ arg["char"] }}"]
      {%- elif arg["keyword"] -%}
        if {{ arg["keyword"][2:].replace("-", "_") }}:
        cmd += ["{{ arg["keyword"] }}"]
      {%- else -%}
        if {{ arg["char"][1] }}:
        cmd += ["{{ arg["char"] }}"]
      {%- endif %}
    {% endfor %}

    # Do not write to stdout to keep output intact for piping.
    click.echo(" ".join(cmd), err=True)
    sys.exit(subprocess.run(cmd).returncode)
